{
	"extends": ["airbnb", "prettier"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"react/jsx-filename-extension": [
			"error",
			{ "extensions": [".jsx", ".tsx"] },
		],

		"comma-dangle": ["error", "always"],
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"],
				"moduleDirectory": ["node_modules", "src"],
			},
		},
	},
}
